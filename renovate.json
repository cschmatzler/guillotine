{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 7am"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "ignoreDeps": ["elixir"],
  "packageRules": [
    {
      "groupName": "dependencies",
      "matchPackagePatterns": ["*"]
    }
  ]
}
